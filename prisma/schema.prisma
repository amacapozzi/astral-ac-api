generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum CHEAT_TYPE {
  DETECT
  WARNING
}

enum SCAN_RESUL_TYPE {
  LEGIT
  SUSPICIOUS
  CHEATER
}

enum PIN_GAME_TYPE {
  IDDLE
  MINECRAFT
  FIVEM
}

enum ACTIONTYPE {
  DELETED
  EXECUTED
  REPLACED
}

model YaraRule {
  id String @unique  @id @default(uuid())
  createdBy String
  ruleName String
  description String
  loaded Boolean @default(false)
  rule String
  isPublic Boolean
  game PIN_GAME_TYPE
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model ClientStrings {
  id String @id @default(uuid())
  addedBy String
  clientName String
  clientHash String
  processName String
  severity CHEAT_TYPE
  game PIN_GAME_TYPE
  global Boolean @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Cheats {
  id          String      @id @default(uuid())
  processName String?
  clientName  String
  clientHash  String?
  clientDir String?
  inInstance Boolean
  clientType  CHEAT_TYPE
  scanResult  ScanResult? @relation(fields: [scanResultId], references: [id])
  scanResultId Int?
}

model Warnings {
  id          String      @id @default(uuid())
  name String
  description String
  scanResult  ScanResult? @relation(fields: [scanResultId], references: [id])
  scanResultId Int?
}

model recentFiles {
  id          String      @id @default(uuid())
  path String
  action ACTIONTYPE
  openDate String
  isSigned Boolean
  scanResult  ScanResult? @relation(fields: [scanResultId], references: [id])
  scanResultId Int?
}


model Process {
  id String @id @default(uuid())
  processName String
  userId String
}
model Pin {
  id          Int        @id @default(autoincrement())
  userId      String
  pin         String     @unique
  scanned Boolean @default(false)
  scanDuration String?
  game        PIN_GAME_TYPE
  public Boolean @default(false)
  used        Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  scanResult  ScanResult?
}
model ScanResult {
  id            Int            @id @default(autoincrement())
  username      String
  hwid          String
  installDate String
  recentFiles   recentFiles[]
  warnings      Warnings[]
  cheats        Cheats[]
  type          SCAN_RESUL_TYPE
  pin           Pin?           @relation(fields: [pinId], references: [id])
  pinId         Int?           @unique
  discordUser   DiscordUser?   @relation(fields: [discordUserId], references: [id])
  steamAccounts SteamAccounts[]
  discordUserId String?       
}

model DiscordUser {
  id           String       @id @default(uuid())
  username     String
  discordId    String
  avatarUrl    String
  scanResults  ScanResult[]
}

model SteamAccounts {
  id String @id @default(uuid())
  name String
  steamId String
  scanResult  ScanResult? @relation(fields: [scanResultId], references: [id])
  scanResultId Int?
}